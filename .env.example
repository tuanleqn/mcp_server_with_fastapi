# Simple Chatbot Authentication Environment Configuration
# Copy this to .env and update with your actual values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Your existing PostgreSQL database connection string
# This should be your Aiven database or any PostgreSQL database
# Format: postgres://username:password@host:port/database?sslmode=require
USER_DB_URI="postgres://your-username:your-password@your-host:your-port/your-database?sslmode=require"

# Alternative name (for backwards compatibility)
# FINANCE_DB_URI="postgres://your-username:your-password@your-host:your-port/your-database?sslmode=require"

# ==========================================
# AUTHENTICATION CONFIGURATION  
# ==========================================

# Secret key for JWT token signing (change this to a secure random string)
AUTH_SECRET_KEY="your-super-secret-jwt-key-change-this-to-something-secure"

# JWT algorithm (HS256 is recommended)
AUTH_ALGORITHM="HS256"

# Token expiration time in minutes (30 minutes default)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# FastAPI server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_HOST="127.0.0.1"

# FastAPI server port
SERVER_PORT=8000

# Enable debug mode (set to False in production)
DEBUG_MODE=True

# ==========================================
# CHATBOT CONFIGURATION
# ==========================================

# Default chatbot response prefix
CHATBOT_RESPONSE_PREFIX="Echo: "

# Maximum chat history items to return
MAX_CHAT_HISTORY=50

# Maximum query history items to return  
MAX_QUERY_HISTORY=100

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"

# Log chat messages to console (True/False)
LOG_CHAT_MESSAGES=True

# Log authentication events to console (True/False)
LOG_AUTH_EVENTS=True

# ==========================================
# EXAMPLE VALUES FOR TESTING
# ==========================================

# Example connection string for local PostgreSQL:
# USER_DB_URI="postgres://postgres:password@localhost:5432/chatbot_db"

